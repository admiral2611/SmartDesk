<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/constraint_layout_item_algo"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginHorizontal="@dimen/_20sdp"
    android:background="@drawable/shape_constrant_algo_item"
    android:layout_margin="@dimen/_10sdp"
    android:clickable="true"
    android:focusable="true">

    <FrameLayout
        android:id="@+id/frame_layout_item_algo_img"
        android:layout_width="@dimen/_240sdp"
        android:layout_height="@dimen/_150sdp"
        android:padding="@dimen/_5sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/kotlin_"
            app:shapeAppearance="@style/roundedImageView_item" />

        <View
            android:id="@+id/empty_view"
            android:layout_width="@dimen/_28sdp"
            android:layout_height="@dimen/_28sdp"
            android:layout_gravity="end"
            android:layout_margin="@dimen/_15sdp"
            android:background="@drawable/shape_edit_text" />

        <ImageView
            android:id="@+id/bookmark_item_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="@dimen/_20sdp"
            android:background="@drawable/shape_edit_text"
            android:contentDescription="bookmark item "
            android:src="@drawable/bookmark_false" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp"
        app:layout_constraintEnd_toEndOf="@id/frame_layout_item_algo_img"
        app:layout_constraintStart_toStartOf="@id/frame_layout_item_algo_img"
        app:layout_constraintTop_toBottomOf="@id/frame_layout_item_algo_img">

        <TextView
            android:id="@+id/title_item_algo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Number of Connected Components in an Undirected Graph"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description_item_algo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:fontFamily="sans-serif"
            android:singleLine="true"
            android:text="Lorem ipsum dolor sit amet consectetur. Quisque  drasut  frtyhyhp hdhyunbh"
            android:textColor="#6D6A6A"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/difficulty_item_algo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="medium"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/title_item_algo"
            app:layout_constraintTop_toBottomOf="@id/description_item_algo" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
